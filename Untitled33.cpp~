#include<iostream.h>

int main()
{
	float a, b;
	cout<<"Nhap so thu nhat: ";cin>>a;
	cout<<"Nhap so thu hai: ";cin>>b;
	cout<<"Tong cua hai so la: "<<a+b<<endl;
	cout<<"Hieu cua hai so la: "<<a-b<<endl;
	cout<<"Nhan cua hai so la: "<<a*b<<endl;
	if( b!=0 )
	{
	cout<<"Chia cua hai so la: "<<a/b<<endl;		
	}else
	{
		cout<<"Phep chia khong hop le";
	}
	return 0;
}
